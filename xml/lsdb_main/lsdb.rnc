datatypes xsd = "http://www.w3.org/2001/XMLSchema-datatypes"
default namespace vml = "http://varioml.org/xml/1.0"
namespace local = ""
namespace xhtml = "http://www.w3.org/1999/xhtml"

#    0===0
#     O=o
#      O		============================================
#     o=O		V a r i o M L
#    0===0		Relax NGC schema for LSDB data transfer
